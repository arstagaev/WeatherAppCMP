<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Weatherappcmp" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Launch theme only for the system splash -->
    <style name="Theme.Weatherappcmp.Launch" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_bg_light</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Weatherappcmp</item>
    </style>

</resources>
